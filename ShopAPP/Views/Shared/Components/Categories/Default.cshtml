@model List<Category>
 <div class="list-group">,
    <a asp-controller="shop" asp-action="list" class="list-group-item list-group-item-action">Tüm Kategoriler</a>
    @foreach (var item in Model)
    {
        <a asp-controller="Shop"
        asp-action="List"
        asp-route-category="@item.Url"
        class="list-group-item list-group-item-action @(ViewBag.SelectedCategory==item.Url?"active":"")">@item.Name</a>
    }
</div>   